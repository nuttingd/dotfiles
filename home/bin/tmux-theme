#!/usr/bin/env bash

# One Dark theme colors for tmux status bar
# Source this file in component scripts: source "$(dirname "$0")/tmux-theme"

# Base colors (One Dark)
THEME_BASE="colour234"      # Background (matches tmux status bar)
THEME_SURFACE0="colour237"
THEME_SURFACE1="colour238"
THEME_TEXT="colour250"      # Foreground (#abb2bf)

# One Dark accent colors
THEME_RED="colour168"       # #e06c75
THEME_GREEN="colour114"     # #98c379
THEME_YELLOW="colour180"    # #e5c07b
THEME_BLUE="colour75"       # #61afef
THEME_MAGENTA="colour176"   # #c678dd
THEME_CYAN="colour73"       # #56b6c2
THEME_ORANGE="colour173"    # #d19a66

# Status bar component colors (darker variants for subtle gradient)
THEME_PINK="colour127"      # Calendar (dark magenta)
THEME_PEACH_DARK="colour130" # Email (dark orange)
THEME_SAPPHIRE="colour31"   # Spotify played (dark cyan)
THEME_BLUE_DARK="colour24"  # Spotify remaining (darker blue)
THEME_SKY="colour25"        # Slack (dark blue)
THEME_LAVENDER="colour61"   # Clock (dark lavender)
THEME_MAUVE_DARK="colour54" # Moon (dark purple)
THEME_PURPLE_DARK="colour53" # Battery (dark purple)
THEME_PEACH="colour216"     # Alerts

# Foreground colors
THEME_FG_LIGHT="colour250"  # Light text on dark backgrounds
THEME_FG_DARK="colour234"   # Dark text on light backgrounds

# Legacy aliases for compatibility
THEME_MAUVE="$THEME_MAGENTA"
THEME_TEAL="$THEME_CYAN"
